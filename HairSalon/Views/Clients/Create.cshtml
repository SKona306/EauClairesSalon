@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.LabelFor(model => model.Stylists)
  @Html.DropDownList("StylistId", new SelectList(@ViewBag.Stylists, "StylistId", "Name"));

  <input type="submit" value="Add new client" class="btn btn-default" />
}
<button>@Html.ActionLink("Show all Clients", "Index")</button>
<button>@Html.ActionLink("Back to home", "Index", "Home")</button>
<button>@Html.ActionLink("List of all Stylists", "Index", "Stylists")</button>