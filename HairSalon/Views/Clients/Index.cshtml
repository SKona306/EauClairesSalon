@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients:</h1>

@if(@Model.Count == 0)
{
  <p>No Clients have been added yet</p>
}

@foreach(Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylists.Name</li>
}

<p>@Html.ActionLink("Back to Stylist list", "Index", "Home")</p>