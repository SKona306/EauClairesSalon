@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Stylist Details:</h2>
<br>

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>

<button>@Html.ActionLink("Edit Stylist", "Edit", new {id = Model.StylistId})</button>
<button>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</button>
<button>@Html.ActionLink("Back to List", "Index")</button>

<h2>Clients:</h2>
@foreach(var client in ViewBag.Clients)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
}

<button>@Html.ActionLink("Add a client", "Create", "Clients")</button>


