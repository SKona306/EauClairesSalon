@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3>Edit Stylist Details:</h3>
<br>

<h4>Edit this Stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.Id)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)

  <input type="submit" value="Save"/>
}

<button>@Html.ActionLink("Back to Stylist List", "Index")</button>
